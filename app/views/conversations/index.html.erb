<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Conversations</h1>
    <%= link_to "New Conversation", new_conversation_path, class: "bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @conversations.each do |conversation| %>
      <%= link_to conversation_path(conversation), class: "block bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200" do %>
        <div class="p-4 border border-gray-200 rounded-lg">
          <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= conversation.title %></h2>
          <p class="text-xs text-gray-500">
            <%= pluralize(conversation.runs.count, 'message') %> â€¢ 
            Created <%= time_ago_in_words(conversation.created_at) %> ago
          </p>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @conversations.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 mb-4">No conversations yet</p>
      <%= link_to "Create your first conversation", new_conversation_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  <% end %>
</div> 