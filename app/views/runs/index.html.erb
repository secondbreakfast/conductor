<% content_for :title, "Runs" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Runs</h1>
    <%= link_to "New run", new_run_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="min-w-full">
    <% if @runs.any? %>
      <table class="w-full">
        <thead>
          <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">ID</th>
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Prompt</th>
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Ran</th>
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Status</th>
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Input</th>
            <th class="h-12 px-4 text-left align-middle font-medium text-muted-foreground [&:has([role=checkbox])]:pr-0">Output</th>
          </tr>
        </thead>
        <tbody id="runs">
          <% @runs.each do |run| %>
            <%= render "runs/run_row", run: run %>
          <% end %>
        </tbody>
      </table>
      <% if @has_more %>
        <div class="flex justify-center mt-4">
          <%= link_to "Load more", runs_path(after: @runs.last.created_at), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No runs found.</p>
    <% end %>
  </div>
</div>